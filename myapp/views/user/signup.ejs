<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../common/head %>
</head>

<body class="container">

  <header>     
        <% include ../common/navbar_noleads %>   
  </header>

  <main>
    <div class="jumbotron">
      <form action='/signup' , method='POST'>
        <table>
          <tr>
            <td>Email:</td>
            <td>
              <input placeholder='Please enter your email' , required=true, name='email' , type='email' />
              <% if (errors && errors.email) %>
              <%= errors.email %>
            </td>
          </tr>
          <tr>
            <td>Password: </td>
            <td>
              <input placeholder='New Password' ,required=true, name='password' , type='password' , value='' />
              <% if (errors && errors.password) %>
              <%= errors.password %>
              <button type='submit'> Sign up </button>
              Already have an account? <a href="/login"> Log in here.</a>
            </td>
          </tr>
        </table>
      </form>

    </div>
  </main>


  <footer class="tm-footer row tm-mt-small">
<% include ../common/footer %>
</footer>

</body>

</html>